<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
    </startup>

    <system.serviceModel>
        <behaviors>
            <serviceBehaviors>
                <behavior name="wsdl">
                    <serviceMetadata httpGetEnabled="True"/>
                </behavior>
            </serviceBehaviors>
        </behaviors>
        <services>
            <service name="ChatDll.Service" 
                     behaviorConfiguration="wsdl">
                <host>
                    <baseAddresses>
                        <add baseAddress="http://0.0.0.0:3100/"/>
                    </baseAddresses>
                </host>
                <endpoint contract="ChatDllContracts.IService"
                          binding="wsDualHttpBinding"
                          address=""
                          bindingConfiguration="unsecure"/>
                <endpoint contract="IMetadataExchange"
                          address="mex"
                          binding="mexHttpBinding"/>
            </service>
        </services>
        <bindings>
            <wsDualHttpBinding>
                <binding name="unsecure">
                    <security mode="None">
                        <message negotiateServiceCredential="false"
                                 clientCredentialType="None"/>
                    </security>
                </binding>
            </wsDualHttpBinding>
        </bindings>
    </system.serviceModel>
</configuration>