<UserControl x:Class="ChatClient.ChatInterface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="300" Height="293.096">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="0,0,0,62">
            <StackPanel x:Name="messageList"/>
        </ScrollViewer>
        <TextBox Margin="10,0,10,34" TextWrapping="Wrap" x:Name="Message" Height="23" VerticalAlignment="Bottom"/>
        <Button IsDefault="True" Content="Envoyer" Margin="0,0,10,9" VerticalAlignment="Bottom" Click="Button_Click" HorizontalAlignment="Right" Width="75"/>

    </Grid>
</UserControl>
